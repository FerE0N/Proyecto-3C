<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Tabla en <%= dbName %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Crear Nueva Tabla en: <%= dbName %></h1>
        <form id="tableForm" action="/databases/<%= dbName %>/tables/create" method="POST">
            <input type="text" name="tableName" placeholder="Nombre de la Tabla" required>
            <div id="columns">
                <div class="column">
                    <input type="text" name="columnNames[]" placeholder="Nombre de la Columna" required>
                    <select name="columnTypes[]" required>
                        <option value="INT">INT</option>
                        <option value="VARCHAR(50)">VARCHAR(50)</option>
                        <option value="TEXT">TEXT</option>
                        <option value="DATE">DATE</option>
                    </select>
                    <button type="button" onclick="removeColumn(this)">Eliminar</button>
                </div>
            </div>
            <button type="button" onclick="addColumn()">Agregar Columna</button>
            <button type="submit">Crear Tabla</button>
        </form>
    </div>
    <script>
        function addColumn() {
            const div = document.createElement('div');
            div.className = 'column';
            div.innerHTML = `
                <input type="text" name="columnNames[]" placeholder="Nombre de la Columna" required>
                <select name="columnTypes[]" required>
                    <option value="INT">INT</option>
                    <option value="VARCHAR(50)">VARCHAR(50)</option>
                    <option value="TEXT">TEXT</option>
                    <option value="DATE">DATE</option>
                </select>
                <button type="button" onclick="removeColumn(this)">Eliminar</button>
            `;
            document.getElementById('columns').appendChild(div);
        }

        function removeColumn(button) {
            button.parentElement.remove();
        }
    </script>
</body>
</html>

