<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Databases</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Bases De Datos</h1>
        <form action="/databases/create" method="POST">
            <input type="text" name="dbName" placeholder="Nombre de la Nueva Base De Datos">
            <button type="submit">Crear Base de Datos</button>
        </form>
        <h2>Bases de datos existentes</h2>
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% databases.forEach(db => { %>
                    <tr>
                        <td><%= db.Database %></td>
                        <td>
                            <form action="/databases/delete" method="POST" style="display:inline;">
                                <input type="hidden" name="dbName" value="<%= db.Database %>">
                                <button type="submit">Eliminar</button>
                            </form>
                            <button onclick="location.href='/databases/<%= db.Database %>/tables'">Admministrar Tablas</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
